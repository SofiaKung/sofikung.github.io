---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { compareProjectImportance, hasDraftTag } from '../utils/content';

const projectEntries = (await getCollection('projects')).filter((entry) => !hasDraftTag(entry));
const sortedProjects = [...projectEntries].sort(compareProjectImportance);
const featured = sortedProjects
  .filter((p) => (p.data.project?.tags || []).some((t) => String(t).toLowerCase() === 'featured'))
  .slice(0, 2);
const projects = featured.length ? featured : sortedProjects.slice(0, 2);

const posts = (await getCollection('posts'))
  .filter((entry) => !hasDraftTag(entry))
  .sort((a, b) => {
    const aDate = a.data.date ? new Date(a.data.date).getTime() : 0;
    const bDate = b.data.date ? new Date(b.data.date).getTime() : 0;
    return bDate - aDate;
  })
  .slice(0, 2);
